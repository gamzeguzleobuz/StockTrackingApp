@using StockTrackingApp.Data
@model List<Sale>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<h1>Hello</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sale Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Client Name</th>
            <th>Sale Date</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>

        <a asp-action="NewSale" asp-controller="Category" class="btn btn-primary">Add Sale</a>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Product </td>
                <td>@item.Price </td>
                <td>@item.Quantity </td>
                <td>@item.Client</td>
                <td>@item.SaleDate </td>
                <td>
                    <a asp-action="DeleteSale" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                    <a asp-action="UpdateSale" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
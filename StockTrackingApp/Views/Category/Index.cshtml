@using StockTrackingApp.Data
@model List<Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<h1>Hello</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        <a asp-action="NewCategory" asp-controller="Category" class="btn btn-primary">Add Category</a>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id </td>
                <td>@item.Name </td>
                <td>
                    <a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                    <a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>

